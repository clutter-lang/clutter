(bind-lexical-variables (x "Hello"
                         y "World")
  (define-global-function hello-world (lambda () (print x) (print y))))

(call (function hello-world))

(bind-lexical-functions (hello-world (lambda (x) (print "Hello") (print x)))
  (hello-world "Syko"))

(hello-world)

(define-global-variable hello (quote Hello))

(print hello)
(print (quote World!))